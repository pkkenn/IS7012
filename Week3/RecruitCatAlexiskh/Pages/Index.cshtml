@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div ="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to RecruitCat!</h1>
        <p class="lead">Your trusted partner in recruitment.</p>
        <hr class="my-4">
        <p>We specialize in connecting top talent with leading companies in various industries.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Our Services</h2>
            <p>We offer comprehensive recruitment services tailored to your needs.</p>
        </div>
        <div class="col-md-4">
            <h2>Industries</h2>
            <p>We specialize in IT, healthcare, finance, and more.</p>
        </div>
        <div class="col-md-4">
            <h2>Testimonials</h2>
            <p>"RecruitCat helped us find the perfect candidates quickly and efficiently!" - Happy Client</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Company Name</h2>
            <p>RecruitCat</p>
        </div>
        <div class="col-md-4">
            <h2>Physical Address</h2>
            <p>123 Main Street, Cincinnati</p>
        </div>
        <div class="col-md-4">
            <h2>Phone Number</h2>
            <p>(513) 123-4567</p>
        </div>
    </div>

    <img src="~/images/istockphoto-1456114314-2048x2048.jpg" class="img-fluid" alt="Recruitment Image">
    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>

    <div class="row">
        <div class="col-md-12">
            <h2>How to Apply</h2>
            <p>Our application process is simple and web-based. Just follow these steps:</p>
            <ol>
                <li>Visit our <a href="#">careers page</a>.</li>
                <li>Search for job openings that match your skills.</li>
                <li>Submit your application online.</li>
                <li>Our team will review your application and contact you for further steps.</li>
            </ol>
        </div>
    </div>
</div>